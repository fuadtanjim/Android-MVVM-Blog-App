<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".feature.blog_details.view.BlogDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewFeatured"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_below="@id/imageViewFeatured"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:maxLines="2"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="@tools:sample/lorem/random"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_below="@id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Jan 11, 2024"/>

        <TextView
            android:id="@+id/tvExcerpt"
            android:layout_below="@id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:maxLines="3"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            tools:text="@tools:sample/lorem/random"/>

        <TextView
            android:id="@+id/tvContent"
            android:layout_below="@id/tvExcerpt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            tools:text="@tools:sample/lorem/random"/>

    </RelativeLayout>

</ScrollView>